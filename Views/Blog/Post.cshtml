@model Blog

@{
    ViewData["Title"] = @Model.Title;
}
<h1>@Model.Title</h1>

<div>
    <div class="row">
        <div class="col">
            <p>
                @Model.Author â€¢ @Model.DateTime.ToString("yyyy-MM-dd")
            </p>
        </div>

        @if(User.Identity.IsAuthenticated)
        {
            <div class="col d-flex justify-content-end">
                <a asp-area="" asp-controller="Blog" asp-action="Post" asp-route-id="@Model.Id" style="margin-right:10px;">
                    Edit
                </a>
                <a asp-area="" asp-controller="Blog" asp-action="Post" asp-route-id="@Model.Id">
                    Delete
                </a>
            </div>
        }
    </div>

    <hr style="margin: 5px 0px 50px 0px;">

    <div class="row">
        <div class="col-md-8 mb-4 mb-md-0">
            <div class="text-center">
                <img   
                    src= @Model.Image
                    style="object-fit: cover;"
                    class="shadow-1-strong rounded blog-image" 
                    onerror="this.src = '@Define.Azure.DEFAULT_IMAGE'"
                >
            </div>
        </div>

        <div class="col-md-4 mb-4 mb-md-0">
            <span class="border">
                @Html.Raw(@Model.Description)
            </span>
        </div>
    </div>
</div>